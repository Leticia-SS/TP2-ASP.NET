@page
@model WebApp_TP2.Pages.SaveNoteModel
@{
}

<form method="post">
    <textarea asp-for="Input.Content" rows="5" class="form-control"></textarea>
    <span asp-validation-for="Input.Content" class="text-danger"></span>
    <button type="submit" class="btn btn-primary mt-2">Salvar</button>
</form>

@if (!string.IsNullOrEmpty(Model.DownloadLink))
{
    <div class="mt-3">
        <a href="@Model.DownloadLink" download>Download do arquivo</a>
    </div>
}